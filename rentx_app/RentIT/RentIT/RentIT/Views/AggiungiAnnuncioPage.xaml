<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentIT.Views.AggiungiAnnuncioPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>

            <Entry Grid.Row="0"
                   x:Name="nomeOggetto"
                   Placeholder="nome oggetto"/>
            <Entry Grid.Row="1"
                   x:Name="descrizioneOggetto"
                   Placeholder="descrizione"/>
            <Entry Grid.Row="2"
                   x:Name="prezzo"
                   Placeholder="prezzo"/>
            <Frame Grid.Row="3"
                   BorderColor="#607D8B">
                <Image Source="" Aspect="AspectFill"/>
            </Frame>
            <Button Grid.Row="4"
                    Text="+ Inserisci immagine"
                    BorderWidth="1"
                    BorderColor="#607D8B"
                    Margin="80,0,80,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>